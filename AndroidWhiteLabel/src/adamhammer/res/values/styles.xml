<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="adamhammer_frame">
        <item name="android:background">@drawable/comment_box</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="mysaasa_view_blog_post" parent="@style/CardView.Light">
        <item name="cardMaxElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="mysaasa_view_blog_post_content">
        <item name="android:padding">10dp</item>
    </style>

    <style name="mysaasa_view_blog_post_title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">#000</item>
    </style>

    <style name="mysaasa_view_blog_post_author">
        <item name="android:textColor">#000</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="mysaasa_view_blog_post_body">
        <item name="android:textColor">#000</item>
    </style>

    <style name="mysaasa_navigation_menu">
        <item name="android:background">#EEE</item>
    </style>

    <!-- We don't want to show this button in my portfolio app -->
    <style name="mysaasa_authentication_button">
        <item name="android:visibility">gone</item>
    </style>

</resources>
