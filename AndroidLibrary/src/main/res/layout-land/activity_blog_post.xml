<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="Title"
        style="@style/simple_title_text"
        android:id="@+id/title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="subtitle"
        android:id="@+id/subtitle"
        style="@style/simple_subtitle_text"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:layout_weight="1">

            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="3"
                android:id="@+id/body_container"

                android:layout_height="match_parent">
            <ScrollView
                style="@style/simple_blogpost_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/simple_blogpost_body"
                    android:text="body"
                    android:id="@+id/body" />
            </ScrollView>
            </LinearLayout>

        <fragment
            android:layout_height="match_parent"
            android:layout_width="0px"
            android:layout_weight="2"
            android:id="@+id/blog_comments"
            android:name="com.mysassa.ui.fragments.BlogCommentViewer"
            tools:layout="@layout/fragment_blogcommentviewer" />

        </LinearLayout>
    </LinearLayout>



    <!-- The navigation drawer -->
    <com.mysassa.ui.sidenav.LeftNavigationFrameLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        />
    </android.support.v4.widget.DrawerLayout>