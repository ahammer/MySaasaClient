<!--
Except for absolute basics, these styles are placeholders, giving places to hook into the styling
of the system without affecting code.
-->
<resources>
    <!-- Placeholder Styles -->
    <style name="mysaasa_news_list"/>
    <style name="mysaasa_news_list_item"/>
    <style name="mysaasa_sidenav"/>
    <style name="mysaasa_title_text"/>
    <style name="mysaasa_blogcomment_fragment"/>
    <style name="mysaasa_blogpost_container"></style>
    <style name="mysaasa_subtitle_text"></style>
    <style name="mysaasa_horm"></style>
    <style name="mysaasa_blogpost_body"></style>
    <style name="mysaasa_blogcomment"></style>
    <style name="mysaasa_fragment_frame"></style>
    <style name="mysaasa_empty_list_item"></style>
    <style name="mysaasa_messages_list"></style>
    <style name="mysaasa_product_category_view"></style>

    <style name="mysaasa_fragment_contact_info"></style>

    <style name="mysaasa_cart"></style>

    <style name="mysaasa_field_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mysaasa_order_item"></style>

    <style name="mysaasa_activity_address"></style>

    <style name="mysaasa_address_field">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mysaasa_order_total_view"></style>


    <!-- The body of a message -->
    <style name="mysaasa_message_body"></style>

    <style name="mysaasa_thread_list"></style>

    <style name="mysaasa_reply_box"></style>

    <!-- Used for small action items -->
    <style name="mysaasa_small_icon_button">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="MySaasaCardViewDark" parent="@style/CardView">

        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_margin">5dp</item>

    </style>

    <style name="MySaasa_ListItem_Message"></style>

    <style name="MySaasa_ListItem_Message_Title"></style>

    <style name="MySaasa_ListItem_Message_Author"></style>

    <style name="MySaasa_ListItem_Message_Date"></style>

