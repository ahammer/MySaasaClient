<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.mysaasa.ui.views.BlogDepthView
        android:id="@+id/depth"
        android:layout_width="10px"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="#F00"
        />

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0px"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/remove"
            style="@style/simple_small_icon_button"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageView
            android:id="@+id/edit"
            style="@style/simple_small_icon_button"
            android:src="@drawable/ic_mode_edit_black_24dp" />

        <ImageView
            android:id="@+id/vote"
            style="@style/simple_small_icon_button"
            android:layout_below="@id/edit"
            android:layout_toRightOf="@id/remove"
            android:src="@drawable/ic_plus_one_black_24dp" />


        <ImageView
            style="@style/simple_small_icon_button"
            android:id="@+id/reply"
            android:layout_below="@id/remove"
            android:src="@drawable/ic_comment_black_24dp" />

        <TextView
            style="@style/simple_small_icon_button"
            android:id="@+id/showChildren"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
                style="@style/simple_blogcomment"
                android:id="@+id/content"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/buttons"
                android:text="Content"
                 />

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/buttons"
                android:text="Posted By: Author on Date"

                 />

</RelativeLayout>
    </LinearLayout>